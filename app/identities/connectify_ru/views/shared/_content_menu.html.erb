
<ul class="b-content-menu">
  <% if can? :create, Post %>
      <li class="b-content-menu__item b-content-menu__post_add <%= 'b-content-menu__item__current' if options[:current_selected] == 'add_post'%>">
        <%= link_to "Add post", new_posts_topic_path, :class => "b-content-menu__item__link b-content-menu__post_add__link" %>
      </li>
  <% end %>
  <li class="b-content-menu__item b-content-menu__posts <%= 'b-content-menu__item__current' if options[:current_selected] == 'posts'%>">
    <%= link_to "Posts", root_path, :class => "b-content-menu__item__link b-content-menu__posts__link" %>
  </li>  
  <li class="b-content-menu__item b-content-menu__users <%= 'b-content-menu__item__current' if options[:current_selected] == 'users'%>">
    <%= link_to "Authors", users_path, :class => "b-content-menu__item__link b-content-menu__users__link" %>
  </li>
</ul>
