<div class="b-header">
  <div class="b-blog_title g-align__left">
    <%= configatron.general.blog_title %>
  </div>

  <% if current_user %>
      <div class="b-account_information g-align__right">
        <span class="b-user_name">
            <%= current_user.login %>
        </span>
        ( <%= link_to "view profile", my_profile_path %> / <%= link_to "logout", logout_path %> )
      </div>
  <% else %>
      <div class="b-account_information g-align__right">
        <%= link_to "login", login_path %>
        or
        <%= link_to "register", new_user_path %>
      </div>
  <% end %>
</div>