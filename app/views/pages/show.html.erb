<% title "RBlog ‒ #{@page.title}" %>
<% content_menu(:current => @page.root.permalink) %>
<div class="b-page__navigation">
  <% @ancestors.each_with_index do |page, index| %>
      <%= link_to h(page.title), page %> →
  <% end %>
  <%= h(@page.title) %>
  <% unless @children.empty? %>
      [
      <% @children.each_with_index do |page, index| %>
          <%= link_to h(page.title), page_path(page) %>
      <% end %>
      ]
  <% end %>
</div>

<h1><%= h @page.title %></h1>

<%= simple_format @page.content %>