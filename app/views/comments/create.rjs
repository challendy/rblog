#show created Comment
page.visual_effect :slide_up, "new_comment_li", :duration => 2
page.delay(2) do
  page.replace "new_comment_li", :partial => 'show', :locals => {:comment => @comment}
  page.visual_effect :slide_down, "comment_#{@comment.id}", :duration => 2
  page.visual_effect :highlight, "comment_#{@comment.id}", :duration => 5
end
