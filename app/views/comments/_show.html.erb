<% content_tag(:li, :id => "comment_#{comment.id}") do %>
   <% div_for(comment) do%>
      <%= comment.body %>
      <br>
      <%= comment.commenter_name%>

      <%= link_to_remote 'Reply', {:url => { :controller => "comments", :action => "new", :post_id => comment.post_id, :parent_comment_id =>comment.id}, :method => "get",},
         :href => new_post_comment_url(@post, :parent_comment_id => comment.id)%>
      

   <% end %>
   <% content_tag(:ul, :id => "comment_#{comment.id}_children") do %>
      <%= render :partial => "comments/show" , :collection => comment.comments, :as => :comment %>
      <% if @comment.parent_comment_id == comment.id %>
        <%= render :partial => "comments/new" %>
      <% end %>
   <% end %>
<% end %>
